<%- include('../layout/user/header.ejs')%>
<%- include('../layout/user/navbar.ejs')%>

<div class="container">
    <div class="main-body">
    
          <!-- Breadcrumb -->
          
          <!-- /Breadcrumb -->
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body" style="padding-top: 20px;">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4> <%=user.Name%></h4>
                      <span class="btn btn-success " style="font-weight: 700;">WALLET:
                        <% if(user.wallet===0){ %> 
                          ₹ 0
                          <% }else{%>
                            ₹<%=user.wallet%>
                          <%  }%>
                       
                      </span><br>
                      
                 
                     
                    </div>
                  </div>
                </div>
              </div>
            
            </div>
            <div class="col-md-8 ">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row " style="padding-top: 20px;">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%=user.Name%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <%=user.email%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <%=user.number%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <% if(user.address!='') { %>
                          <%=user.address[0].name%> ,<%=user.address[0].houseName%>,<%=user.address[0].street%>,<%=user.address[0].district%>,<%=user.address[0].state%>
                        <% } %>
                    </div>
                  </div>
                  <hr>
                  <div  class="row " style="margin-bottom: 5px;">
                    <div class="col-sm-12">
                      <a class="btn btn-info "  href="/userprofile/editprofile/<%=user._id%>">Edit Profile</a>
                      <a class="btn btn-info "  href="/userprofile/changepass/<%=user._id%>">Change Password</a>
                      <a class="btn btn-info "  href="/userprofile/viewaddress/<%=user._id%>">View Address</a>
                      <a class="btn btn-info "  href="/userprofile/order/<%=user._id%>">Orders</a>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>

        </div>
    </div>




<%- include('../layout/user/footernav.ejs')%>
<%- include('../layout/user/footer.ejs')%>
