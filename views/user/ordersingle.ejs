<%- include('../layout/user/header.ejs')%>
  <!-- <link rel="stylesheet" href="/user/cart.css"> -->
  <%- include('../layout/user/navbar.ejs')%>



 
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <section>
    <div class="card" style="background-color: #ffffff;">
      <div class="card-body">
        <div class="container mb-5 mt-3">
          <div class="row d-flex align-items-baseline">
            <div class="col-xl-9">
              <p style="font-size: larger; font-weight: bolder;" style="color: #4b7dba;font-size: 20px;">Invoice &gt;&gt; <strong>ID: #123-123</strong></p>
            </div>
          </div>
          <div class="container">
            <div class="col-md-12">
              <div class="text-center">
                <i class="fa fa-receipt fa-4x ms-0" style="color:#8f8061 ;"></i>
                <p style="font-size: x-large; font-weight: bolder;" class="pt-2">Order View</p>
              </div>
            </div>
            <div class="row">
              <div class="col-xl-8">
                <ul style="font-size: larger; font-weight: bolder;" class="list-unstyled">
                  <li class="text-muted">To: <span style="color:#8f8061 ;"> <%=order.userId.Name %>  </span></li>
                  <li class="text-muted">Address:<span>    <%=order.deliveryAddress%></span></li>
              
                </ul>
              </div>
              <div class="col-xl-4">
                <p style="font-size: larger;" class="text-muted">Invoice</p>
                <ul style="font-size: larger; font-weight: bolder;" class="list-unstyled">
                  <li class="text-muted"><i class="fas fa-circle" style="color:#8f8061 ;"></i> <span
                      class="fw-bold">ID:</span><%=order.orderId %></li>
                  <li class="text-muted"><i class="fas fa-circle" style="color:#8f8061 ;"></i> <span
                      class="fw-bold">Creation Date: </span><%= order.date.toLocaleString({ day: '2-digit', month: '2-digit', year: '2-digit' })%> </li>
  <% if (order.status=="Delivered"){%>
     <% if(order.deliveryDate!=null){%>
  
                      <li class="text-muted"><i class="fas fa-circle" style="color:#8f8061 ;"></i> <span
                        class="fw-bold">Delivery Date: </span><%=order.deliveryDate.toLocaleDateString()%></li>
                        <%}%>
                        <%}%>
                  <li class="text-muted"><i class="fas fa-circle" style="color:#8f8061;"></i> <span
                      class="me-1 fw-bold">Status:</span><span class="badge bg-warning text-black fw-bold">
                        <%=order.status %></span></li>
                </ul>
              </div>
            </div>
            <% order.product.forEach((element)=>{%>
         
            <div class="row my-2 mx-1 justify-content-center">
              
              <div class="col-md-2 mb-4 mb-md-0">
                <div class="
                            bg-image
                            ripple
                            rounded-5
                            mb-4
                            overflow-hidden
                            d-block
                            " data-ripple-color="light">
                  <img src="/productimages/<%=element.productId.image[0] %>"
                    class="w-100" height="100px" alt="Elegant shoes and shirt" />
                  <a href="#!">
                    <div class="hover-overlay">
                      <div class="mask" style="background-color: hsla(0, 0%, 98.4%, 0.2)"></div>
                    </div>
                  </a>
                </div>
              </div>
          
              <div class="col-md-7 mb-4 mb-md-0">
                <p style="font-size: larger; font-weight: bolder;" class="fw-bold"> <%=element.productId.productName %> </p>
                <p class="mb-1">
                  <span style="font-size: larger; font-weight: bolder;" class="text-muted me-2">Quantity:</span><span style="font-size: larger; font-weight: bolder;"> <%=element.quantity %> </span>
                </p>
                <p>
                  <span style="font-size: larger; font-weight: bolder;" class="text-muted me-2">Price:</span><span style="font-size: larger; font-weight: bolder;"> <%=element.productId.price %> </span>
                </p>
              </div>
              <div class="col-md-3 mb-4 mb-md-0">
                <h5 class="mb-2">
                    <span style="font-size:small; font-weight: bolder;" >Single Total :</span> <s class="text-muted me-2 small align-middle"></s><span style="font-size: larger; font-weight: bolder;" class="align-middle"></SPAn><%=element.singleTotal %></span>
                </h5>
                <p class="text-danger"><small></small></p>
              </div>
            </div>
            <%})%>
            <hr>
            <div class="row">
              <div class="col-xl-8">
                <p style="font-size: larger; font-weight: bolder;" class="ms-3">PiXEL CAMERA LTD.</p>
              </div>
              <div class="col-xl-3">
                <ul style="font-size: larger; font-weight: bolder;" class="list-unstyled">
                  <li  class="text-muted ms-3"><span  class="text-black me-4">subtotal</span > <%=order.total %></li>
  
                  <!-- <li class="text-muted ms-3"><span class="text-black me-4">Coupon Used :-</span> <%=order.coupon %></li> -->
                  
                  <% if(order.discount!=null){%>
                  <li  class="text-muted ms-3"><span  class="text-black me-4">Discount</span >  <%=order.discount %></li>
                  <%}else{%>
                  <li class="text-muted ms-3"><span class="text-black me-4">Discount</span><span class="pl-3">0</span></li>
               <%}%>
                  <li class="text-muted ms-3 mt-2"><span class="text-black me-4">Shipping</span><span class="pl-3">FREE</span></li>
                </ul>
                <p  class="text-black float-start"><span style="font-size:larger; font-weight: bolder;" class="text-black me-3"> Total Amount</span><span
                    style="font-size:larger; font-weight: bolder;">  â‚¹ <%=order.total %></span></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
     
   



    <!-- Bootstrap JS -->

    <%- include('../layout/user/footernav.ejs')%>
      <%- include('../layout/user/footer.ejs')%>