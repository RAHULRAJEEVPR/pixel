     <script>
        function changeQuantity(proId, count,price,userId) {
          let quantity = document.getElementById(proId).innerHTML
          console.log(quantity)
          count = parseInt(count)
          let stock= parseInt(document.getElementsByClassName(proId)[0].value)
          console.log(stock)
          if(quantity<=1&&count==-1){


          }else if(stock<=quantity&&count==1){
            Swal.fire({
                 title: 'stock limit reached!',
                 text: 'Out of stock',
                 icon: 'warning',
                 timer: 1000,
                 showConfirmButton: false
            })

          }else{
          $.ajax({
            url: '/cart/change-product-quantity',
            data: {
          
              product: proId,
              count: count,
              productprice:price,
              userId:userId
            },
            method: 'post',
            success: (response) => {
              console.log(response);
              document.getElementById(proId).innerHTML = parseInt(quantity) + count
              document.getElementsByClassName(proId)[1].innerHTML = response.proTotal
              document.getElementById(userId).innerHTML = response.cartTotal
              
            }
          })
        }
        }

