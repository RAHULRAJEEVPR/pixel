  <script>
    var xValues = ["<%=date[0]%>","<%=date[1]%>","<%=date[2]%>","<%=date[3]%>","<%=date[4]%>","<%=date[5]%>","<%=date[6]%>"];
    
    new Chart("myChartsales", {
      type: "line",
      data: {
        labels: xValues,
        datasets: [ { 
          data: ["<%=sales[0]%>","<%=sales[1]%>","<%=sales[2]%>","<%=sales[3]%>","<%=sales[4]%>","<%=sales[5]%>","<%=sales[6]%>"],
          borderColor: "green",
          fill: false
        }]
      },
      options: {
        legend: {display: false}
      }
    });
    </script>
<script>
  var xValues = ["Online payment", "Cash on Deliver","Wallet"];
  var yValues = ["<%=UPI%>", "<%=COD%>","<%=WALLET%>"];
  var barColors = [
  "#2b5797",
    "#00aba9",
    "#32B8F3",
   
  ];
  
  new Chart("myChartpie", {
    type: "pie",
    data: {
      labels: xValues,
      datasets: [{
        backgroundColor: barColors,
        data: yValues
      }]
    },
    options: {
      title: {
        display: true,
        text: "Revenue"
      }
    }
  });
  </script>

