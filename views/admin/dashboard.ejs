                <div class="card-body">
                  <section>
                    <div class="row">
                      <h1>Sales</h1>
                      <div class="col-lg-12">
                    <canvas id="myChartsales" style="width:100%;max-width:900px"></canvas>
                  </div>
                 
                  </div>
