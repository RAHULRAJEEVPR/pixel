<%- include('../layout/admin/header.ejs')%>
<%- include('../layout/admin/navbar.ejs')%>
<%- include('../layout/admin/sidebar.ejs')%>


<main id="main" class="main">
    <section>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="text-center">Sale Report</h2>
                    <form action="/admin/sales" method="post" onsubmit="return validateForm()">
                        <label for="category">From- Date</label>
                        <input type="date" name="from" id="from"  class="form-control form-control-line" >

                        <label for="description">To Date</label>
                        <input type="date" name="to" id="to"  class="form-control form-control-line">

                        <button type="submit" class="btn btn-success mt-4">Submit</button> 

                        <% if(typeof message !=="undefined") { %>
                            <h1 style="font-size: 14px;color: brown;"><%=message  %></h1>
                        <% } %>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>


<%- include('../layout/admin/footer.ejs')%>